<h1>Listing articles</h1>

<%= link_to "New Article", new_article_path %>

<% @articles.each do |article| %>
      <h1><%= article.title %></h1>
      <p><%= article.text %></p>
      <p><%= link_to "Show", article_path(article) %></p>
      <p><%= link_to "Edit", edit_article_path(article) %></p>
<% end %>
